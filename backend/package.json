{
  "name": "timeline-game-backend",
  "version": "1.0.0",
  "description": "Backend server for Timeline Educational Card Game",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:mock": "USE_MOCK_DB=true ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPatterns=database-integration.test.ts",
    "test:unit": "jest --testPathIgnorePatterns=database-integration.test.ts",
    "test:db:setup": "./scripts/setup-test-db.sh",
    "test:db:reset": "npx prisma migrate reset --force --schema=./prisma/schema.prisma",
    "test:env:validate": "node scripts/validate-env-test.js",
    "test:modes": "node test-modes.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "timeline",
    "game",
    "educational",
    "cards",
    "history"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@types/pg": "^8.15.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "prisma": "^6.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
